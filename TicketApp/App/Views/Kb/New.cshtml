<h1>Create a new forum topic</h1>
<form method="post" action="/kb/new">

    <label for='forum'>Forum</label>

    <select id='forum' name='forumId'>
       @foreach (var x in Model.Forums)
       {
           <option value='@x.Id'>@x.Name</option>
       }
    </select>

    <label for='title'>Title</label>
    <input type='text' id='title' value='@Model.Article.Title' name='title'/>

    <label for='text'>Text</label>
    <textarea rows="10" cols="20" name='text' id="text">@Model.Article.Text</textarea>
   
    <input type="submit" name='action' value="Create" />
</form>